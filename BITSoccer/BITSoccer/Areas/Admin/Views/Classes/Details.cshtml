@model BITSoccer.Models.Class
@using System.Globalization
@{
    ViewBag.Title = "Chi tiết lớp học";
    Layout = "~/Views/Shared/_LayoutAdminControl.cshtml";
}


<div>


    <dl class="dl-horizontal">
        <dt>
            Tên lớp học
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MetaTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MetaTitle)
        </dd>

        <dt>
            Số lượng học viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quanity)
        </dd>

        <dt>
            Giá gốc
        </dt>

        <dd>
            @Convert.ToDouble(Model.Prices).ToString("c0", new CultureInfo("vi-VN"))
        </dd>

        <dt>
            Giác khuyến mãi
        </dt>

        <dd>
            @Convert.ToDouble(Model.PromoPrices).ToString("c0", new CultureInfo("vi-VN"))
        </dd>
        @{
            if (Model.Image != null)
            {
                <dt>
                    Hình ảnh
                </dt>

                <dd>
                    <img src="@Url.Content(Model.Image)" alt="Alternate Text" style="width:200px" />
                </dd>
            }
            else
            {
                <dt>
                    Hình ảnh
                </dt>

                <dd>
                    <img src="https://via.placeholder.com/600" alt="Alternate Text" style="width:200px" />
                </dd>
            }
        }

        <dt>
            Lịch học
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDay) - @Html.DisplayFor(model => model.EndDay)
        </dd>

        <dt>
            Giới hạn thấp nhất
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MinQuanity)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Thông tin Huấn luyện viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Coach.Name)
        </dd>

        <dt>
            Dành cho giới tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender.Gender1)
        </dd>

        <dt>
            Trình độ lớp học
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LevelStudent.LevelName)
        </dd>

        <dt>
            Buổi học
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PartOfDay.PartOfDay1)
        </dd>

        <dt>
            Giới hạn độ tuổi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RangeAge.MinAge) - @Html.DisplayFor(model => model.RangeAge.MaxAge)
        </dd>

        <dt>
            Khung thời gian
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RangeTime.StartTime) - @Html.DisplayFor(model => model.RangeTime.EndTime)
        </dd>

        <dt>
            Cơ sở
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stadium.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifyDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifyDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifyBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifyBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ViewCount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ViewCount)
        </dd>

    </dl>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Class_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
