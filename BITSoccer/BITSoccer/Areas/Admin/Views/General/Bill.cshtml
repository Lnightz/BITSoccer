@model IEnumerable<BITSoccer.Models.Bill>
@{
    ViewBag.Title = "Hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdminControl.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách @ViewBag.Title</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Tên khách</th>
                    <th>Ngày trả tiền</th>
                    <th>Giảm giá</th>
                    <th>Tổng tiền</th>
                    <th>Phương thức thanh toán</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User.CustomerName</td>
                        <td>@String.Format("{0:dd/MM/yyyy}",item.CreateDate)</td>
                        <td>@String.Format("{0:0.#}",item.Discount)</td>
                        <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", item.TotalPaid)</td>
                        <td>@item.PayMethod.PayMethodName</td>
                        <td class="text-center">
                            <a href="@Url.Action("BillDetails","General", new { id = item.Bill_ID })" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Tên khách</th>
                    <th>Ngày trả tiền</th>
                    <th>Giảm giá</th>
                    <th>Tổng tiền</th>
                    <th>Phương thức thanh toán</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>