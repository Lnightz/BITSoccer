@model BITSoccer.Models.Footer
@{
    ViewBag.Title = "EditFooter";
    Layout = "~/Views/Shared/_LayoutAdminControl.cshtml";
}

@using (Html.BeginForm("EditFooter", "General", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        @ViewBag.Title
                    </div>
                    <div class="card-body">
                        <div class="col-md-10">
                            <label for="Name">Tên Doanh Nghiệp</label>
                            <input name="Name" type="text" class="form-control" id="Name" value="@Model.Name" />
                        </div>
                        <div class="col-md-10">
                            <label for="Address">Địa chỉ</label>
                            <input name="Address" type="text" class="form-control" id="Address" value="@Model.Address" />
                        </div>
                        <div class="col-md-10">
                            <label for="Phone">Số điện thoại</label>
                            <input name="Phone" type="text" class="form-control" id="Phone" value="@Model.Phone" />
                        </div>
                        <div class="col-md-10">
                            <label for="Facebook">Facebook</label>
                            <input name="Facebook" type="text" class="form-control" id="Facebook" value="@Model.Facebook" />
                        </div>
                        <div class="col-md-10">
                            <label for="Insta">Instagram</label>
                            <input name="Insta" type="text" class="form-control" id="Insta" value="@Model.Insta" />
                        </div>
                        
                        <div class="col-md-10">
                            <input name="Footer_ID" type="hidden" value="@Model.Footer_ID" />
                        </div>
                    </div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-10 d-flex justify-content-end my-4">
                                <a href="@Url.Action("Archive")" class="btn btn-secondary">Quay lại</a>
                                <input type="submit" value="Save" class="btn btn-primary ml-3" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
