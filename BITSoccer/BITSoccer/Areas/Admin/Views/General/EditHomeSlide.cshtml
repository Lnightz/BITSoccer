@model BITSoccer.Models.Home_Slide
@{
    ViewBag.Title = "Chỉnh sửa Home Slide";
    Layout = "~/Views/Shared/_LayoutAdminControl.cshtml";
}


@using (Html.BeginForm("EditHomeSlide", "General", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        @ViewBag.Title
                    </div>
                    <div class="card-body">
                        <div class="col-md-10">
                            <label for="Name">Mô tả ngắn</label>
                            <input name="Name" type="text" class="form-control" id="Name" value="@Model.Description" />
                        </div>
                        <div class="col-md-10">
                            <label for="Link">Đường dẫn</label>
                            <input name="Link" type="text" class="form-control" id="Link" value="@Model.Link" />
                        </div>
                        <div class="col-md-10">
                            <label for="IsActive">Mô tả ngắn</label>
                            @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="col-md-10">
                            <label for="PictureUpload">Upload hình ảnh</label>
                            <input name="PictureUpload" type="file" class="form-control" id="PictureUpload" value="@Model.PictureUpload" />
                        </div>
                        <div class="col-md-10">
                            @{
                                if (Model.Image != null)
                                {
                                    <label>Hình ảnh</label>
                                    <img src="@Model.Image" style="max-width:350px" />
                                    <input name="Image" type="hidden" class="form-control" id="Image" value="@Model.Image" />
                                }
                            }
                            <input name="HomeSlide_ID" type="hidden" value="@Model.HomeSlide_ID" />
                        </div>
                    </div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-10 d-flex justify-content-end my-4">
                                <a href="@Url.Action("Archive")" class="btn btn-secondary">Quay lại</a>
                                <input type="submit" value="Create" class="btn btn-primary ml-3" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
