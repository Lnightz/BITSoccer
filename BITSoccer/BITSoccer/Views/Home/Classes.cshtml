@*@model IEnumerable<BITSoccer.Models.Class>*@
@using BITSoccer.Models;
@using System.Globalization;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<BITSoccer.Models.Class>
@{
    ViewBag.Title = "Khoá học";
}

<main>
    <div class="titile-bg" style="background-image: url('../../Assets/img/header_bg_2.jpg');">
        <div class="container">
            <div class="titile-name">Khoá Học</div>
        </div>
        <div class="text-shadow"></div>
    </div>
    <div id="background_main">
        <div class="container-fluid">
            <div id="background_content">
                <div class="row">
                    <div class="col-xl-3 col-lg-2 col-md-3 col-xs-12 col-sm-3">
                        <div class="navbar-expand-lg">
                            <div class="row d-flex justify-content-center">
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#accordion" aria-controls="accordion" aria-expanded="false" aria-label="Toggle navigation">
                                    <h4 class="filter-titile"><i class="fas fa-search" style="padding-right:5px"></i>Tìm kiếm nhanh</h4>
                                </button>
                            </div>

                            <h4 class="filter-titile hide"><i class="fas fa-search" style="padding-right:5px"></i>Tìm kiếm nhanh</h4>
                            <div id="accordion" class="filter-bar collapse navbar-collapse">
                                <div class="card">
                                    <div class="card-header collapsed" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                        <h4 class="mb-0 card-title">
                                            Trình độ
                                        </h4>
                                    </div>
                                    <div id="collapseOne" class="accordion-body collapse" aria-labelledby="headingOne">
                                        <div class="card-body">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Cơ bản
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Trung Cấp
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Chuyên nghiệp
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header collapsed" id="headingTwo" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        <h4 class="mb-0 card-title">
                                            Độ tuổi
                                        </h4>
                                    </div>
                                    <div id="collapseTwo" class="accordion-body collapse" aria-labelledby="headingTwo">
                                        <div class="card-body">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">5-9
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">9-15
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header collapsed" id="headingThree" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        <h4 class="mb-0 card-title">
                                            Giới tính
                                        </h4>
                                    </div>
                                    <div id="collapseThree" class="accordion-body collapse" aria-labelledby="headingThree">
                                        <div class="card-body">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Nam
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Nữ
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header collapsed" id="headingFour" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                        <h4 class="mb-0 card-title">
                                            Huấn luyện viên
                                        </h4>
                                    </div>
                                    <div id="collapseFour" class="accordion-body collapse" aria-labelledby="headingFour">
                                        <div class="card-body">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Quốc tế
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Quốc gia
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Đào tạo chính quy
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header collapsed" id="headingFive" data-toggle="collapse" data-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                        <h4 class="mb-0 card-title">
                                            Buổi học
                                        </h4>
                                    </div>
                                    <div id="collapseFive" class="accordion-body collapse" aria-labelledby="headingFive">
                                        <div class="card-body">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Sáng
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Trưa
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">Chiều
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header collapsed collapsed" id="headingSix" data-toggle="collapse" data-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                                        <h4 class="mb-0 card-title">
                                            Thời gian
                                        </h4>
                                    </div>
                                    <div id="collapseSix" class="accordion-body collapse" aria-labelledby="headingSix">
                                        <div class="card-body">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">1h
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">1h30
                                                        </label>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" value="">2h
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="btn btn-primary btn-lg" style="float:right; margin-top: 10px;">Tìm</div>
                            </div>
                        </div>
                    </div>
                    <!--Filter-->
                    <div class="col-xl-9 col-lg-10 col-md-9 col-xs-12 col-sm-9">
                        <div class="row classes-title-section">
                            <div class="col-md-6 col-sm-12 d-flex justify-content-start">
                                <h1 style="color:rgb(119, 190, 67)"><strong>Các khoá học:</strong></h1>
                            </div>
                            <div class="col-md-6 col-sm-12 d-flex justify-content-end">
                                <div class="btn-sort">
                                    <div class="btn-group ">
                                        <button class="btn prices-sort" type="button" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="false">
                                            Thứ tự<span><i class="fas fa-chevron-down"></i></span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="#">Mới đăng</a>
                                            <a class="dropdown-item" href="#">Thứ tự chữ cái</a>
                                            <a class="dropdown-item" href="#">Cũ nhất</a>
                                        </div>
                                    </div>
                                    <div class="btn-group ">
                                        <button class="btn prices-sort" type="button" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="false">
                                            Giá tiền <span><i class="fas fa-chevron-down"></i></span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="#">Tăng dần</a>
                                            <a class="dropdown-item" href="#">Giảm dần</a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- Cards -->
                        <div class="new-class" style="padding-top: 25px">
                            <div class="container">
                                <div class="row divcenter">
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <div class="col-lg-4 col-md-6 col-sm-12">
                                                <div class="card" style="width: auto;">
                                                    <div class="inner">
                                                        <div class="embed-responsive embed-responsive-4by3">
                                                            <a href="@Url.Action("ClassDetails","Home", new { id = item.Class_ID})">
                                                                @{
                                                                    if (item.Image != null)
                                                                    {
                                                                        <img src="@Url.Content(item.Image)" class="card-img-top embed-responsive-item" alt="...">
                                                                    }
                                                                    else
                                                                    {
                                                                        <img src="https://via.placeholder.com/600" class="card-img-top embed-responsive-item" alt="...">
                                                                    }
                                                                }
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="d-flex justify-content-between">
                                                            <a href="@Url.Action("ClassDetails","Home", new { id = item.Class_ID})">
                                                                <h5 class="card-title">@item.Name</h5>
                                                            </a>
                                                            <div class="class-number d-flex">
                                                                <i class="fas fa-user"></i>
                                                                <h5>@item.Quanity</h5>
                                                            </div>
                                                        </div>
                                                        <p class="card-text">
                                                            Huấn luyện viên: <span>@item.Coach.Name</span>
                                                        </p>
                                                        @{
                                                            string startday = item.StartDay.HasValue ? item.StartDay.Value.ToString("dd/MM/yyyy") : string.Empty;
                                                            string endday = item.EndDay.HasValue ? item.EndDay.Value.ToString("dd/MM/yyyy") : string.Empty;
                                                            <p class="card-text">
                                                                Thời gian: <span>@startday</span> - <span>@endday</span>
                                                            </p>
                                                        }
                                                        <div class="star-prices d-flex justify-content-between">
                                                            <div class="star d-flex">
                                                                <i class="fas fa-star"></i><span>(4,5)</span>
                                                            </div>
                                                            <div class="prices position-relative">
                                                                @{
                                                                    if (item.PromoPrices != item.Prices)
                                                                    {
                                                                        <div class="prices-now">@Convert.ToDouble(@item.PromoPrices).ToString("C0", new CultureInfo("vi-VN"))</div>
                                                                        <del class="prices-before">@Convert.ToDouble(@item.Prices).ToString("C0", new CultureInfo("vi-VN"))</del>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="prices-now">@Convert.ToDouble(@item.Prices).ToString("C0", new CultureInfo("vi-VN"))</div>
                                                                    }
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cards -->
    <!--pagination-->
    <div style="text-align:center">
        @*Page @(Model.PageCount< Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount)*@
        <div>
            @Html.PagedListPager(Model, page => Url.Action("Classes", new { page = page, }))
        </div>
    </div>
</main>
