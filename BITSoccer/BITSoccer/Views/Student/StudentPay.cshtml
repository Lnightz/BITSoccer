
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

    <div class="titile-bg">
        <div class="container">
            <div class="titile-name">thanh toán</div>
        </div>
        <div class="text-shadow"></div>
    </div>
    <div id="background_main">
        <div class="container">
            <div id="background_content">
                <div class="content-title">
                    <h2>thanh toán</h2>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="login-form divcenter" style="max-width: 550px;">
                                <label for="username">mã khóa học</label>
                                <div class="input-group">
                                    <select class="custom-select" id="inputGroupSelect04">
                                        <option selected>Choose...</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                                <br>
                                <label for="class-name">tên khóa học</label>
                                <input id="class-name" class="form-control">
                                <br>
                                <label for="class-time">thời gian</label>
                                <input id="class-time" class="form-control">
                                <br>
                                <label for="class-coach">Huấn luyện viên</label>
                                <input id="class-coach" class="form-control">
                                <br>
                                <label for="class-prices">giá tiền</label>
                                <input id="class-prices" class="form-control">
                                <br>
                                <label for="class-discount-code">Mã giảm giá</label>
                                <input id="class-discount-code" class="form-control">
                                <br>
                                <label for="">Hình thức thanh toán</label>
                                <form>
                                    <div class="input-group ml-3 py-2">
                                        <input type="radio" name="payType" id="international-pay" class="radio-btn-pay">
                                        <label for="international-pay">THẺ QUỐC TẾ, VISA, MASTER, JCB</label>
                                    </div>
                                    <div class="input-group ml-3 py-2">
                                        <input type="radio" name="payType" id="internal-pay" class="radio-btn-pay">
                                        <label for="internal-pay">THẺ ATM NỘI ĐỊA/ INTERNET BANKING (MIỄN PHÍ THANH TOÁN)</label>
                                    </div>
                                    <div class="input-group ml-3 py-2">
                                        <input type="radio" name="payType" id="momo-pay" class="radio-btn-pay">
                                        <label for="momo-pay">VÍ MOMO</label>
                                    </div>
                                </form>
                                <br>
                                <button id="loginbtn" class="float-right button" type="submit" style="background-color: rgb(0, 110, 255);">Thanh Toán</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>